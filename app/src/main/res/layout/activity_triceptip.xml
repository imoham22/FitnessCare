<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".triceptip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="FitnessCare"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textSize="55sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bannerDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/banner"
            android:layout_centerHorizontal="true"
            android:text="The start to a Healthy Life"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="italic" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/food"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/tricepexten" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/tutorial"
            android:layout_height="500dp">

            <RelativeLayout
                android:id="@+id/workOutCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/cardwhitebackground">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:padding="13dp"
                    android:text="Workout Tutorial"
                    android:textColor="@color/black"
                    android:textSize="20dp"></TextView>


                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="37dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_baseline_menu_book_24" />

                <TextView
                    android:id="@+id/ingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:text="Tricep Extensions "
                    android:textColor="@color/black"
                    android:textSize="19.5dp"></TextView>

                <TextView
                    android:id="@+id/ing1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ingTitle"
                    android:padding="10dp"
                    android:text="Hold a barbell or dumbbell with your hands shoulder-width apart and in an overhand grip with your palms facing down"
                    android:textColor="@color/black"
                    android:textSize="15dp"></TextView>

                <ImageView
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ing1"
                    android:src="@drawable/square"></ImageView>

                <TextView
                    android:id="@+id/ing2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_marginTop="1dp"
                    android:padding="10dp"
                    android:text="To maintain perfect form, keep your elbows close to your sides and tense your abdominal muscles."
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <ImageView
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ing2"
                    android:src="@drawable/square"></ImageView>

                <TextView
                    android:id="@+id/ing3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line2"
                    android:layout_marginTop="1dp"
                    android:padding="10dp"
                    android:text="Hold for a brief period before gently extending your arms back to the beginning position."
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <ImageView
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ing3"
                    android:src="@drawable/square"></ImageView>

                <TextView
                    android:id="@+id/ing4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line3"
                    android:padding="10dp"
                    android:text="Repeat"
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <ImageView
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ing4"
                    android:src="@drawable/square"></ImageView>

                <TextView
                    android:id="@+id/ing5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line4"
                    android:padding="10dp"
                    android:text="What does it work on?"
                    android:textColor="@color/black"
                    android:textSize="18dp"></TextView>

                <ImageView
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ing5"
                    android:src="@drawable/square"></ImageView>

                <TextView
                    android:id="@+id/ing6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line5"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:text="The tricep muscles, which are found on the rear of the upper arm, are the focus of tricep extensions."
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <ImageView
                    android:id="@+id/line6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ing6"
                    android:src="@drawable/square"></ImageView>

            </RelativeLayout>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_backspace_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    View Other Workouts?"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/workout"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_fitness_center_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/bar">

            </TextView>
        </LinearLayout>

    </LinearLayout>


</ScrollView>
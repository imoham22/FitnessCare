<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".burger">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/food"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:scaleType="centerCrop"
            android:src="@drawable/burger" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/tutorial"
                android:layout_width="match_parent"
                android:layout_height="692dp">

                <RelativeLayout
                    android:id="@+id/pushUps"
                    android:layout_width="wrap_content"
                    android:layout_height="682dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/cardwhitebackground">


                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:padding="13dp"
                        android:text="Healthy Beef Burger Recipe"
                        android:textColor="@color/black"
                        android:textSize="19dp"></TextView>


                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="37dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_baseline_recipe" />

                    <TextView
                        android:id="@+id/steptitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title"
                        android:padding="5dp"
                        android:text="Step 1"
                        android:textColor="@color/black"
                        android:textSize="18dp"></TextView>

                    <TextView
                        android:id="@+id/step1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/steptitle"
                        android:padding="10dp"
                        android:text="Add the mince, spring onions, grated carrot, garlic, mustard, tarragon, and egg to a bowl. Mix well with a fork. After giving the mixture a sprinkle of salt and pepper, divide it into 4. With your hands, flatten each piece into a 10 cm circle (A) that is about 2 cm thick and is similar in breadth to the buns. For around 30 minutes, chill. Burgers can also be prepared a day in advance by stacking them between sheets of greaseproof paper to prevent sticking, wrapping them in cling film, and chilling them until cooking time."
                        android:textColor="@color/black"
                        android:textSize="14dp"></TextView>

                    <TextView
                        android:id="@+id/steptitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/step1"
                        android:padding="5dp"
                        android:text="Step 2"
                        android:textColor="@color/black"
                        android:textSize="18dp"></TextView>

                    <TextView
                        android:id="@+id/step2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/steptitle2"
                        android:padding="10dp"
                        android:text="Heat the oven to 200°C, fan 180°C, and gas 6. Place the peppers on a baking sheet that is non-stick, cut sides down. Lay the tomatoes next to them, cut-side up, for the final 3 minutes of roasting, just to soften slightly, until the skins are browned, about 35 minutes total. Peppers should be taken out, moved right away, and covered with cling film in a small dish. Allow it cool for 5–10 minutes or until you can handle it. Chop the peppers, remove the skins (B), and add them back to the dish with any fluids. Chop the tomatoes, then combine them with the peppers, lime juice, chives, onion, and peppers."
                        android:textColor="@color/black"
                        android:textSize="14dp"></TextView>

                    <TextView
                        android:id="@+id/steptitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/step2"
                        android:padding="5dp"
                        android:text="Step 3"
                        android:textColor="@color/black"
                        android:textSize="18dp"></TextView>

                    <TextView
                        android:id="@+id/step3"
                        android:layout_width="match_parent"
                        android:layout_height="146dp"
                        android:layout_below="@id/steptitle3"
                        android:padding="5dp"
                        android:text="Burgers can be cooked on the grill or in a hot griddle. Place the buns on the griddle and cook until the griddle bars are visible. Burger should be brushed with oil, place with the greased side down on the heated griddle. Cook for 5 minutes over medium heat, flip them over, and cook for a further 5 minutes. Now put everything together and you're done."
                        android:textColor="@color/black"
                        android:textSize="14dp"></TextView>

                </RelativeLayout>


            </RelativeLayout>

        </ScrollView>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tutorial"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_backspace_24" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                       Ingredients"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/ingredients"
                android:src="@drawable/ic_baseline_menu_book_24" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/bar">

            </TextView>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
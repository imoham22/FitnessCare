<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChiaOats">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/food"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/salad" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/tutorial"
            android:layout_height="677dp">

            <RelativeLayout
                android:id="@+id/recipeCard"
                android:layout_width="401dp"
                android:layout_height="550dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/cardwhitebackground">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:padding="13dp"
                    android:text="Chicken Salad Recipe"
                    android:textColor="@color/black"
                    android:textSize="20dp"></TextView>


                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="37dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_baseline_menu_book_24" />

                <TextView
                    android:id="@+id/ingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:text="Ingredients"
                    android:textColor="@color/black"
                    android:textSize="19.5dp"></TextView>

                <TextView
                    android:id="@+id/ing1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_below="@id/ingTitle"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:text="1 boneless, skinless chicken breast"
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <ImageView
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ing1"
                    android:src="@drawable/square"></ImageView>

                <TextView
                    android:id="@+id/ing2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:text="1 table-spoon of fish sauce"
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <ImageView
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ing2"
                    android:src="@drawable/square"></ImageView>

                <TextView
                    android:id="@+id/ing3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line2"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:text="1 table-spoon of zest and lime juice"
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <ImageView
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ing3"
                    android:src="@drawable/square"></ImageView>

                <TextView
                    android:id="@+id/ing4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line3"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:text="1 tea-spoon of caster sugar"
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <ImageView
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ing4"
                    android:src="@drawable/square"></ImageView>

                <TextView
                    android:id="@+id/ing5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line4"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:text="100g of bag mixed salad leaves"
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <ImageView
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ing5"
                    android:src="@drawable/square"></ImageView>

                <TextView
                    android:id="@+id/ing6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line5"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:text="large handful coriander, roughly chopped"
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <ImageView
                    android:id="@+id/line6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ing6"
                    android:src="@drawable/square"></ImageView>

                <TextView
                    android:id="@+id/ing7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line6"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:text="¼ of red onion, thinly sliced"
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <ImageView
                    android:id="@+id/line7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ing7"
                    android:src="@drawable/square"></ImageView>

                <TextView
                    android:id="@+id/ing8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line7"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:text="½ chilli, deseeded and thinly sliced"
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <ImageView
                    android:id="@+id/line8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ing8"
                    android:src="@drawable/square"></ImageView>

                <TextView
                    android:id="@+id/ing9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line8"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:text="60g of Greek yogurt"
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <ImageView
                    android:id="@+id/line9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ing9"
                    android:src="@drawable/square"></ImageView>

                <TextView
                    android:id="@+id/ing10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line9"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:text="¼ of a cucumber, sliced lengthwise"
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <ImageView
                    android:id="@+id/line10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ing10"
                    android:src="@drawable/square">

                </ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_below="@+id/recipeCard"
                android:padding="2dp"
                android:layout_height="80dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardwhitebackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="kcal"
                        android:id="@+id/kcal"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginBottom="44dp"
                        android:layout_marginLeft="22dp">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="190"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:textSize="17dp">
                    </TextView>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_below="@+id/recipeCard"
                android:layout_marginLeft="80dp"
                android:padding="2dp"
                android:layout_height="80dp">

                <RelativeLayout
                    android:layout_width="1000dp"
                    android:layout_height="1000dp"
                    android:background="@drawable/cardwhitebackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="fat"
                        android:id="@+id/fat"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginBottom="44dp"
                        android:layout_marginLeft="24dp">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1g"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:textSize="17dp">
                    </TextView>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_below="@+id/recipeCard"
                android:layout_marginLeft="160dp"
                android:padding="2dp"
                android:layout_height="80dp">

                <RelativeLayout
                    android:layout_width="1000dp"
                    android:layout_height="1000dp"
                    android:background="@drawable/cardwhitebackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="44dp"
                        android:text="sugars"
                        android:textColor="@color/black"
                        android:textSize="16dp"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1.6g"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="22dp"
                        android:textSize="17dp">
                    </TextView>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_below="@+id/recipeCard"
                android:layout_marginLeft="240dp"
                android:padding="2dp"
                android:layout_height="80dp">

                <RelativeLayout
                    android:layout_width="1000dp"
                    android:layout_height="1000dp"
                    android:background="@drawable/cardwhitebackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="44dp"
                        android:text="carbs"
                        android:textColor="@color/black"
                        android:textSize="16dp"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="6g"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="22dp"
                        android:textSize="17dp">
                    </TextView>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_below="@+id/recipeCard"
                android:layout_marginLeft="320dp"
                android:id="@+id/protein"
                android:padding="2dp"
                android:layout_height="80dp">

                <RelativeLayout
                    android:layout_width="1000dp"
                    android:layout_height="1000dp"
                    android:background="@drawable/cardwhitebackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="44dp"
                        android:text="protein"
                        android:textColor="@color/black"
                        android:textSize="16dp"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="19g"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="22dp"
                        android:textSize="17dp">
                    </TextView>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_backspace_24" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="      Want Another Recipe?"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/dietPage"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_food_bank_24"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/bar">

            </TextView>
        </LinearLayout>

    </LinearLayout>


</ScrollView>
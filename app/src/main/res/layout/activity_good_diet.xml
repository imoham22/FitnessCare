<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/cut_card_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".goodDiet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/banner"
            android:text="Fitness Care"
            android:textSize="60dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/bannerDescription"
            android:layout_width="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_height="wrap_content"
            android:text="The start to a Healthy Life"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banner" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/tutorial"
            android:layout_height="677dp">

            <RelativeLayout
                android:id="@+id/pushUps"
                android:layout_width="wrap_content"
                android:layout_height="655dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/cardwhitebackground">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:padding="13dp"
                    android:text="What makes a Good Diet?"
                    android:textColor="@color/black"
                    android:textSize="20dp"></TextView>


                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="37dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_baseline_food_bank_24" />

                <TextView
                    android:id="@+id/steptitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:text="What do I look for?"
                    android:textColor="@color/black"
                    android:textSize="18dp"></TextView>

                <TextView
                    android:id="@+id/step1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/steptitle"
                    android:padding="10dp"
                    android:text="Figuring a diet comes down to a person's needs and objectives, it comes down to whether your goal is to lose weight or gain muscle."
                    android:textColor="@color/black"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/steptitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/step1"
                    android:padding="5dp"
                    android:text="Types of Weight Loss Diets"
                    android:textColor="@color/black"
                    android:textSize="17dp"></TextView>

                <TextView
                    android:id="@+id/step2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/steptitle2"
                    android:padding="6dp"
                    android:text="Ketogenic diet - This is a low-carbohydrate diet. The idea of this weight loss diet is to restrict carbohydrate in-take and increase on fat and protein."
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/weight3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/step2"
                    android:padding="6dp"
                    android:text="DASH diet- This is a Low-fat diet. The focus is on reducing fat intake and increasing the intake of fruits, vegetables, and whole grains.
"
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/weight4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/weight3"
                    android:padding="6dp"
                    android:text="Intermittent fasting - This is a low-calorie Diet. The process involves reducing the consumption of calories as a whole"
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/weight5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/weight4"
                    android:padding="6dp"
                    android:text="Mediterranean fasting - This diet focuses on low calorie intake, however particularly an emphasis on a planet based diet, healthy fats and lean protein."
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/steptitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/weight5"
                    android:padding="5dp"
                    android:text="Important heads up"
                    android:textColor="@color/black"
                    android:textSize="17dp"></TextView>

                <TextView
                    android:id="@+id/weight6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/steptitle3"
                    android:padding="6dp"
                    android:text="Not only does the kind of diet matter, but also the person's consistency throughout time, calorie restriction, and commitment to the plan. It's critical to select a diet that is secure, long-lasting, and catered to your unique requirements and tastes."
                    android:textColor="@color/black"
                    android:textSize="15dp"></TextView>


            </RelativeLayout>




        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bar"
            android:layout_below="@+id/tutorial"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_backspace_24" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                 Muscle-Growth"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/muscle"
                android:src="@drawable/ic_baseline_fitness_center_24" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/bar">

            </TextView>
        </LinearLayout>

    </LinearLayout>


</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wrap">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/food"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wrap" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/tutorial"
            android:layout_height="677dp">

            <RelativeLayout
                android:id="@+id/pushUps"
                android:layout_width="378dp"
                android:layout_height="646dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/cardwhitebackground">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:padding="13dp"
                    android:text="Chicken and Avacado Recipe"
                    android:textColor="@color/black"
                    android:textSize="20dp"></TextView>


                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="37dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_baseline_recipe" />

                <TextView
                    android:id="@+id/steptitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:padding="5dp"
                    android:text="Step 1"
                    android:textColor="@color/black"
                    android:textSize="19dp"></TextView>

                <TextView
                    android:id="@+id/step1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/steptitle"
                    android:padding="10dp"
                    android:text="Firstly, Mix the chicken with the lime juice, chilli powder and garlic."
                    android:textColor="@color/black"
                    android:textSize="17dp"></TextView>

                <TextView
                    android:id="@+id/steptitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/step1"
                    android:padding="5dp"
                    android:text="Step 2"
                    android:textColor="@color/black"
                    android:textSize="19dp"></TextView>

                <TextView
                    android:id="@+id/step2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/steptitle2"
                    android:padding="10dp"
                    android:text="Keep an eye on the chicken since it will cook rapidly when the oil is heated in a nonstick frying pan. While waiting, reheat the wraps as directed on the package, or if you have a gas stove, warm them over the flame until they are just beginning to sear. Keep them from drying out or rolling them will be challenging. As well as ensuring that the wrap is not over-cooked since it would also interfere with the process of rolling wrap, in that it will be too hard and crispy."
                    android:textColor="@color/black"
                    android:textSize="17dp"></TextView>

                <TextView
                    android:id="@+id/steptitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/step2"
                    android:padding="5dp"
                    android:text="Step 3"
                    android:textColor="@color/black"
                    android:textSize="19dp"></TextView>

                <TextView
                    android:id="@+id/step3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/steptitle3"
                    android:padding="5dp"
                    android:text="Half an avocado should be mashed onto each wrap, followed by the chicken, peppers, and coriander. The peppers should be heated through in the pan. Cut in half, roll up, then it will be ready to eat with your fingers. Including more vegtables of your choice can benefit the health output of this dish, so feel free to add what you desire."
                    android:textColor="@color/black"
                    android:textSize="18dp"></TextView>

            </RelativeLayout>




        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bar"
            android:layout_below="@+id/tutorial"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_backspace_24" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                       Ingredients"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/ingredients"
                android:src="@drawable/ic_baseline_menu_book_24" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/bar">

            </TextView>
        </LinearLayout>

    </LinearLayout>


</ScrollView>